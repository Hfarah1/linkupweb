{% extends 'base.html.twig' %}

{% block title %}Créer un événement virtuel{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h1 class="h3 mb-0">Créer un événement virtuel</h1>
        </div>
        <div class="card-body">
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}

            {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
            
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        {{ form_label(form.titre) }}
                        {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.titre) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.description) }}
                        {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 4}}) }}
                        {{ form_errors(form.description) }}
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="mb-3">
                        {{ form_label(form.date_debut) }}
                        {{ form_widget(form.date_debut, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.date_debut) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.date_fin) }}
                        {{ form_widget(form.date_fin, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.date_fin) }}
                    </div>
                </div>
            </div>

            <div class="mt-4">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Créer l'événement
                </button>
                <a href="{{ path('eventslist') }}" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Retour à la liste
                </a>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %} 