{% extends 'baseback.html.twig' %}

{% block title %}events{% endblock %}

{% block body %}
<div class="main-panel">
  <div class="content-wrapper">
    <div class="row">

      <div class="col-lg-6 grid-margin stretch-card">
        <div class="card">
          <div class="card-body">
            <h4 class="card-title">event</h4>
            <p class="card-description">ajouter un evenement</p>
            <div class="table-responsive">
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th>Image</th> <!-- Nouvelle colonne pour l'image -->
                    <th>Name</th>
                    <th>date dÃ©but</th>
                    <th>date fin</th>
                    
                  </tr>
                </thead>
                <tbody>
                  
                  {% for e in events %}
                      <tr>
                        <td>
                          <img src="{{  asset('uploads/' ~ e.imagePath )  }}" class="img-fluid rounded-3" style="width: 50px; height: 50px;">
                        </td> <!-- Affichage de l'image -->
                        <td>{{ e.titre }}</td>
                        <td>{{ e.date_debut|date('Y-m-d') }}</td>
                        <td>{{ e.date_fin|date('Y-m-d') }}</td>

                        
                        <td>
                          <a href="{{ path('event_edit', {'id': e.id_event}) }}" class="btn btn-sm btn-outline-warning me-2"><i class="fa fa-pencil"></i></a>

                          <a href="{{ path('event_delete', {'id': e.id_event}) }}" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure you want to delete this item?');"><i class="fa fa-trash"></i></a>
                        </td>
                      </tr>
                    
                  {% endfor %}
                  
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>

      

    </div>
  </div>
</div>
{% endblock %}
