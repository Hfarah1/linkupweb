{% extends 'baseback.html.twig' %}

{% block title %}events{% endblock %}

{% block body %}
<div class="main-panel">
  <div class="content-wrapper">
    <div class="row">
      <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
          <div class="card-body">
            <h4 class="card-title">Événements</h4>
            <p class="card-description">Liste des événements</p>
            <div class="table-responsive">
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th>Image</th>
                    <th>Titre</th>
                    <th>Date début</th>
                    <th>Date fin</th>
                    <th>Type</th>
                    <th>QR Code</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  {% for e in events %}
                    <tr>
                      <td>
                        <img src="{{ asset('uploads/' ~ e.imagePath ) }}" class="img-fluid rounded-3" style="width: 50px; height: 50px;" onerror="this.onerror=null;this.src='{{ asset('images/default-avatar.png') }}';">
                      </td>
                      <td>{{ e.titre }}</td>
                      <td>{{ e.dateDebut|date('Y-m-d H:i') }}</td>
                      <td>{{ e.dateFin|date('Y-m-d H:i') }}</td>
                      <td>
                        {% if e.type == 'virtual' %}
                          <span class="badge bg-primary">Virtuel</span>
                        {% else %}
                          <span class="badge bg-success">Présentiel</span>
                        {% endif %}
                      </td>
                      <td style="text-align: center;">
                        <a class="btn btn-outline-secondary btn-sm"
                           href="{{ path('generate_qr_code', {'id': e.id}) }}"
                           target="_blank"
                           title="Voir le QR code dans un nouvel onglet">
                              Générer QR Code
                        </a>
                      </td>
                      <td>
                        {% if e.type == 'virtual' %}
                          <a href="{{ path('virtual_event_join', {'id': e.id}) }}" class="btn btn-sm btn-primary me-2">
                            <i class="fas fa-video"></i> Rejoindre
                          </a>
                        {% endif %}
                        <a href="{{ path('event_edit', {'id': e.id}) }}" class="btn btn-sm btn-warning me-2">
                          <i class="fas fa-edit"></i>
                        </a>
                        <a href="{{ path('event_delete', {'id': e.id}) }}" class="btn btn-sm btn-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet événement ?');">
                          <i class="fas fa-trash"></i>
                        </a>
                      </td>
                    </tr>
                  {% endfor %}
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        function toggleQrCode(id) {
            var el = document.getElementById(id);
            if (el.style.display === 'none') {
                el.style.display = 'block';
            } else {
                el.style.display = 'none';
            }
        }
    </script>
{% endblock %}
