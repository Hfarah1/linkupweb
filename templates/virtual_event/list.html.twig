{% extends 'base.html.twig' %}

{% block title %}Liste des événements virtuels{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Événements virtuels</h1>
        <a href="{{ path('app_virtual_event_new') }}" class="btn btn-primary">
            <i class="fas fa-plus"></i> Nouvel événement
        </a>
    </div>

    {% if events is empty %}
        <div class="alert alert-info">
            Aucun événement virtuel n'a été créé pour le moment.
        </div>
    {% else %}
        <div class="row">
            {% for event in events %}
                <div class="col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">{{ event.titre }}</h5>
                            <p class="card-text">{{ event.description|slice(0, 150) }}...</p>
                            <div class="text-muted mb-3">
                                <small>
                                    <i class="far fa-calendar"></i> Du {{ event.dateDebut|date('d/m/Y H:i') }}
                                    <br>
                                    Au {{ event.dateFin|date('d/m/Y H:i') }}
                                </small>
                            </div>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="badge bg-info">{{ event.categorie }}</span>
                                <div>
                                    <a href="{{ path('app_virtual_event_show', {'id': event.id}) }}" class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-eye"></i> Voir
                                    </a>
                                    <a href="{{ path('app_virtual_event_edit', {'id': event.id}) }}" class="btn btn-sm btn-outline-secondary">
                                        <i class="fas fa-edit"></i> Modifier
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
</div>
{% endblock %} 