{% extends 'base.html.twig' %}

{% block title %}Nouvel événement virtuel{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h1 class="h3 mb-0">Créer un nouvel événement virtuel</h1>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                    <div class="mb-3">
                        {{ form_row(form.titre) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(form.description) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(form.dateDebut) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(form.dateFin) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(form.categorie) }}
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">Créer l'événement</button>
                        <a href="{{ path('app_virtual_event_list') }}" class="btn btn-secondary">Retour à la liste</a>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 